{
  "appId": "com.streaksnap.app",
  "appName": "StreakSnap",
  "webDir": "build",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#f97316",
      "showSpinner": false,
      "spinnerColor": "#ffffff"
    },
    "StatusBar": {
      "style": "LIGHT",
      "backgroundColor": "#f97316"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark",
      "resizeOnFullScreen": true
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#f97316"
    },
    "Haptics": {
      "enabled": true
    }
  },
  "ios": {
    "scheme": "StreakSnap"
  },
  "android": {
    "allowMixedContent": true
  }
}